@model IEnumerable<SaveNScore.Models.Goal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Goals</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GoalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalPeriod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LimitValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GoalType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoalPeriod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LimitValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Completed)
        </td>
        <td>
            @Html.ActionLink("Add Transaction", "Edit", new { id=item.GoalID }) |
            @Html.ActionLink("Details", "Details", new { id=item.GoalID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GoalID })
        </td>
    </tr>
}

</table>
