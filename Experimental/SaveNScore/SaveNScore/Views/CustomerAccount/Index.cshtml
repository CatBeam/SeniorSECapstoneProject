@model IEnumerable<SaveNScore.Models.CustomerAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accounts</h2>

<p style="display:inline">
<p style="display:inline">@Html.ActionLink("Create New", "Create")</p> 

&nbsp;&nbsp;

<p style="display:inline">
    @Html.ActionLink("Add a Transaction", "AddTransaction")</pstyle="display:inline">
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.AccountNum }) |
                @Html.ActionLink("View Account Goals", "AccountGoals", new { id = item.AccountNum })
            </td>
        </tr>
    }

</table>
