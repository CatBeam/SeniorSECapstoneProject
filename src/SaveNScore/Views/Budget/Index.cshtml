@model IEnumerable<SaveNScore.Models.Budget>
@{
    ViewBag.Title = "Budgets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Budgets</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BudgetID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RemainingAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.BudgetDescription)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BudgetID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BudgetID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BudgetID })
            </td>
        </tr>
    }
</table>
