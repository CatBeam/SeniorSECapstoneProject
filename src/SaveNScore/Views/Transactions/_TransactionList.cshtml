@model SaveNScore.ViewModels.TransactionListViewModel

<h2>@Model.Customer.FirstName @Model.Customer.LastName</h2>

@if (Model.Transactions.Count == 0)
{
    <p>No transactions during the specified period.</p>
}
else
{
    <ul>
        @foreach (var transaction in Model.Transactions)
        {
            // TODO: add css classes transaction-Debit and transaction-Credit
            <li class="transaction-@transaction.Type">@transaction.Type @transaction.Amount @transaction.Date.Day @transaction.Date.Month @transaction.Date.Year</li>
        }
    </ul>  
}
